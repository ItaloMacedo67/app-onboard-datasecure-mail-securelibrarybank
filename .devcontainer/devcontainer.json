{
    "name": "Tauri Rust Dev Container (Alpine)",
    "dockerComposeFile": [
        "../docker-compose.yml",
        "../docker-compose-dev.yml"
    ],
    "service": "dev",
    "workspaceFolder": "/workspace",
    "runServices": ["dev"],
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "rust-lang.rust-analyzer"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.cargo /workspace/target && cargo fetch",
    "remoteUser": "vscode"
}
